@page
@model Final3.Pages.Players.IndexModel
@{
    ViewData["Title"] = "Players";
}

<h2>Players List</h2>

<p>
    <a asp-page="Create">Add New Player</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Rank</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.Players)
        {
            <tr>
                <td>@player.Name</td>
                <td>@player.Rank</td>
            </tr>
        }
    </tbody>
</table>
