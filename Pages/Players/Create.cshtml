@page
@model Final3.Pages.Players.CreateModel
@{
    ViewData["Title"] = "Add Player";
}

<h2>Add a New Player</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Player.Name" class="form-label"></label>
        <input asp-for="Player.Name" class="form-control" />
        <span asp-validation-for="Player.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Player.HoursPlayed" class="form-label"></label>
        <input asp-for="Player.HoursPlayed" class="form-control" />
        <span asp-validation-for="Player.HoursPlayed" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Player.FavoriteGame" class="form-label"></label>
        <input asp-for="Player.FavoriteGame" class="form-control" />
        <span asp-validation-for="Player.FavoriteGame" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Player</button>
</form>
